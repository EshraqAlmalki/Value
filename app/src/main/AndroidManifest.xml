<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tuwaiq.value">

    <permission android:name="com.tuwaiq.value.PRIVATE"
        android:protectionLevel="signature"/>

    <uses-permission android:name="com.tuwaiq.value.PRIVATE"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACTIVITY_RECOGNITION"/>



    <application
        android:name=".database.ValueApp"
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Value"
        >

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".broadcastRec.NotificationRec"
            android:exported="false"
            android:permission="com.tuwaiq.value.PRIVATE">

            <intent-filter>
                <action android:name="com.tuwaiq.value.SHOW_NOTIFICATION"/>
            </intent-filter>
        </receiver>

    </application>

    <queries>
        <intent>
            <action android:name="android.intent.action.PICK"/>
            <data android:mimeType="vnd.android.cursor.dir/contact"/>
        </intent>
    </queries>


</manifest>