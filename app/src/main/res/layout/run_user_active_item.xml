<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="15sp">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="370dp"
        android:layout_height="328dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/nav_shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/zoom_out_map_iv"
            android:layout_width="343dp"
            android:layout_height="175dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="17dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_map_24" />

        <TextView
            android:id="@+id/distance_tv"
            android:layout_width="45dp"
            android:layout_height="31dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="72dp"
            android:gravity="center"
            android:hint="distance"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/zoom_out_map_iv" />

        <TextView
            android:id="@+id/calories_burned_tv"
            android:layout_width="44dp"
            android:layout_height="31dp"
            android:layout_marginStart="128dp"
            android:layout_marginTop="72dp"
            android:gravity="center"
            android:hint="calories burned"
            app:layout_constraintStart_toEndOf="@+id/distance_tv"
            app:layout_constraintTop_toBottomOf="@+id/zoom_out_map_iv" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="104dp"
            android:layout_height="45dp"
            android:layout_marginStart="27dp"
            android:layout_marginTop="24dp"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="the distance:"
            android:textColor="@color/value_green"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/zoom_out_map_iv" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="144dp"
            android:layout_height="46dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="44dp"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="calories burned:"
            android:textColor="@color/value_green"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/zoom_out_map_iv" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="39dp"
            android:layout_height="24dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:gravity="center|start|center_horizontal"
            android:text="m"
            app:layout_constraintStart_toEndOf="@+id/distance_tv"
            app:layout_constraintTop_toBottomOf="@+id/textView17" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="44dp"
            android:layout_height="22dp"
            android:layout_marginTop="4dp"
            android:gravity="center|start"
            android:text="cal"
            app:layout_constraintStart_toEndOf="@+id/calories_burned_tv"
            app:layout_constraintTop_toTopOf="@+id/calories_burned_tv" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>